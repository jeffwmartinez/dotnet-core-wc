@model dotnetcorewc.Models.TaskItem

@{
    ViewData["Title"] = "Details";
}

<div class="text-center">
    <h2 class="display-4">Details</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <dl class="row">
            <dd class="col-sm-10 mt-3">
                <h4><b>@Html.DisplayFor(model => model.Title)</b></h4>
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
        <div class="text-right">
            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-outline-dark">Edit</a>
        </div>
    </div>
</div>

<div class="text-right mt-3">
    <a asp-action="Index">Back to List</a>
</div>
